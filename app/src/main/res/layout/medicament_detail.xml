<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bk_img_low"
    android:screenOrientation="portrait"
    tools:context="app.lugcor.co.com.medireminder.view.Medicament_Detail">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="app.lugcor.co.com.medireminder.view.Header_Main"
            android:id="@+id/fragment2"
            tools:layout="@layout/header_main"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <fragment
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:name="app.lugcor.co.com.medireminder.view.Medicament_Data_Detail"
            android:id="@+id/fragment3"
            android:layout_below="@+id/fragment2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/fragment2"
            android:layout_alignEnd="@+id/fragment2"
            tools:layout="@layout/medicament_data_detail" />

    </LinearLayout>

</RelativeLayout>
