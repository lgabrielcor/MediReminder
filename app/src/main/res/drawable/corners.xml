<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient
                android:startColor="#e1dddfeb"
                android:endColor="#e1d5c0cd"
                android:angle="0"
                />


            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp"
                />
            <corners android:radius="8dp"/>

            <stroke android:width="2px" android:color="#ffdfcad7"/>

        </shape>

    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient
                android:startColor="#e1e8eaf6"
                android:endColor="#e1dfcad7"
                android:angle="0"
                />


            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp"
                />
            <corners android:radius="8dp"/>

            <stroke android:width="2px" android:color="#ffdfcad7"/>

        </shape>
    </item>

    </selector>
